{
  "database": {
    "rules": "database.rules.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "build",
    "rewrites": [
      { "source": "/sounds", "function": "sounds" },
      { "source": "/donations", "function": "donations" },
      { "source": "**", "destination": "/index.html" }
    ],
    "headers" : [
      {
        "source": "/service-worker.js",
        "headers": [ { "key": "Cache-Control", "value": "no-cache" } ]
      }
    ]
  }
}
